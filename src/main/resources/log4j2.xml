<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
    <Properties>
        <property name="log_pattern">%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n</property>
        <property name="log_path">/Users/Vincent/Documents/Tools/Logs</property>
        <property name="file_size">100M</property>
    </Properties>
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <ThresholdFilter level="DEBUG" onMatch="ACCEPT" onMismatch="DENY"/>
            <PatternLayout pattern="${log_pattern}"/>
        </Console>
        <RollingFile name="APP_DEBUG" fileName="${log_path}/Michelangelo/APP_DEBUG.log"
                     filePattern="${log_path}/Michelangelo/APP_DEBUG-%d{yyyy-MM-dd}.log.gz">
            <ThresholdFilter level="DEBUG" onMatch="ACCEPT" onMismatch="DENY"/>
            <PatternLayout pattern="${log_pattern}"/>
            <SizeBasedTriggeringPolicy size="${file_size}"/>
        </RollingFile>
        <RollingFile name="APP_INFO" fileName="${log_path}/Michelangelo/APP_INFO.log"
                     filePattern="${log_path}/Michelangelo/APP_INFO-%d{yyyy-MM-dd}.log.gz">
            <ThresholdFilter level="INFO" onMatch="ACCEPT" onMismatch="DENY"/>
            <PatternLayout pattern="${log_pattern}"/>
            <SizeBasedTriggeringPolicy size="${file_size}"/>
        </RollingFile>
        <RollingFile name="APP_WARN" fileName="${log_path}/Michelangelo/APP_WARN.log"
                     filePattern="${log_path}/Michelangelo/APP_WARN-%d{yyyy-MM-dd}.log.gz">
            <ThresholdFilter level="WARN" onMatch="ACCEPT" onMismatch="DENY"/>
            <PatternLayout pattern="${log_pattern}"/>
            <SizeBasedTriggeringPolicy size="${file_size}"/>
        </RollingFile>
        <RollingFile name="APP_ERROR" fileName="${log_path}/Michelangelo/APP_ERROR.log"
                     filePattern="${log_path}/Michelangelo/APP_ERROR-%d{yyyy-MM-dd}.log.gz">
            <ThresholdFilter level="ERROR" onMatch="ACCEPT" onMismatch="DENY"/>
            <PatternLayout pattern="${log_pattern}"/>
            <SizeBasedTriggeringPolicy size="${file_size}"/>
        </RollingFile>
    </Appenders>
    <Loggers>
        <Root level="DEBUG">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="APP_DEBUG"/>
            <AppenderRef ref="APP_INFO"/>
            <AppenderRef ref="APP_WARN"/>
            <AppenderRef ref="APP_ERROR"/>
        </Root>
    </Loggers>
</Configuration>